package priv.yakiler.hf.enum
{
	import mx.resources.Locale;

	/**
	 * 本地语言环境描述枚举
	 * */
	public class LocaleEnum
	{
		// ---------------------------------------------------------------------------------
		//
		//		枚举常量
		//
		// ---------------------------------------------------------------------------------
		/**中文-中国*/
		public static const ZH_CN:LocaleEnum = new LocaleEnum("zh_CN");
		/**英语-美国*/
		public static const EN_US:LocaleEnum = new LocaleEnum("en_US");
		
		// ---------------------------------------------------------------------------------
		//
		//		属性
		//
		// ---------------------------------------------------------------------------------
		protected var locale:String;
		
		// ---------------------------------------------------------------------------------
		//
		//		构造函数
		//
		// ---------------------------------------------------------------------------------
		public function LocaleEnum(locale:String)
		{
			this.locale = locale;
		}
		
		// ---------------------------------------------------------------------------------
		//
		//		方法
		//
		// ---------------------------------------------------------------------------------
		public function toString():String
		{
			return "locale:" + locale;
		}
	}
}